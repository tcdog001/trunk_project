#!/bin/bash

if [[ -z "${__UTILS_SMONITOR_IN__}" ]]; then __UTILS_SMONITOR_IN__=_; else return; fi

get_smonitor_pid() {
	local name="$1"
	local count="$2"; count=${count:=3}
	local i tmp
	local pid=0

	for ((i=0; i<count; i++)); do
		tmp=$(ps | grep "${name}" | grep -v smonitor | grep -v grep | grep -v "\[*]" | head -n 1 | awk '{print $1}')
		if [[ -n "${tmp}" ]]; then
			expr ${tmp} + 1 &> /dev/null && pid=${tmp}
		fi
	done

	echo ${pid}
}

